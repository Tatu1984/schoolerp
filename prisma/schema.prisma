  reference     String?
  balanceBefore Float
  balanceAfter  Float
  createdAt     DateTime        @default(now())

  wallet SmartWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([walletId])
  @@index([walletId, createdAt])
  @@index([createdAt])
  @@index([type])
  @@map("wallet_transactions")
}

